#include <iostream>

template <typename T>
T* allocater(unsigned int n){
  T* da{new T [n]};

  std::cout << "Please insert values: \n";
  
  for(std::size_t i{0}; i<n; i++){    
    std::cin >>  da[i];}
  return da;
}

template <typename S>
void printer(S* d, unsigned int n){
  std::cout << "In reverse: \n";
  for(unsigned int i{n}; i>=0; i--){
    std::cout << d[i-1] << std::endl;}

}


int main(){
  unsigned int n;
  std::cin >> n;
  int* pippo;

  pippo = allocater<int>(n);
  printer(pippo, n);

  return 0;}
